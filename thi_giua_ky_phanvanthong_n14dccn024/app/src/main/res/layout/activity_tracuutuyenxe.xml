<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ViewFlipper
                android:id="@+id/viewAnh1"
                android:background="#877d05"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                >

                <ImageView
                    android:src="@drawable/anh1"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:src="@drawable/anh2"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



            </ViewFlipper>

            <LinearLayout

                android:orientation="vertical"
                android:background="#19b30b"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THÔNG TIN TUYẾN XE "
                    android:textColor="#030303"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="#868686"


                    />
                <LinearLayout

                    android:background="#d1b800"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textSize="18dp"
                        android:textAlignment="center"

                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Hình Thức"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Đối tượng "
                        android:textSize="18dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Giá vé "
                        android:textSize="18dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C.Dài(km)"
                        android:textSize="18dp"
                        android:textAlignment="center"/>

                </LinearLayout>




                <ListView
                        android:id="@+id/listViewTuyenXe"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"

                    />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>