<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:background="@drawable/pedidos_shape">
    <ImageView
        android:src="@drawable/ic_hotel_black_24dp"
        android:id="@+id/imgHotelFavorite"
        android:layout_width="250px"
        android:layout_height="250px" />
    <TextView
        android:textColor="#37454d"
        android:textSize="22dp"
        android:padding="5dp"
        android:text="Khachs san"
        android:id="@+id/txtNameFavorite"
        android:layout_toRightOf="@id/imgHotelFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16dp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/imgHotelFavorite"
        android:text="Dia chi"
        android:layout_below="@id/txtNameFavorite"
        android:id="@+id/txtAddressFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/imgHotelFavorite"
        android:layout_below="@id/txtAddressFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtPriceFavorite"
            android:textColor="#428500"
            android:text="220000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/txtRateFavorite"
            android:textColor="#e1fa03"
            android:text="1.0"
            android:gravity="center"
            android:background="#428500"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

</RelativeLayout>