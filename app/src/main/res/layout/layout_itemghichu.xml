<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:orientation="vertical"
        android:background="@drawable/favorite">

        <TextView
            android:id="@+id/itemTenGhiChu"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30dp" />
        <ImageView
            android:id="@+id/itemAnhKhachSan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/itemTenKhachSan"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"

                />
            <TextView
                android:id="@+id/itemNgayTaoGhiChu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Thời Gian"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/itemDiaChiKhachSan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Địa chỉ"
            android:textSize="17dp"
            android:textAlignment="center"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/itemMoTaKhachSan"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnSuaGhiChu"
                android:layout_width="200dp"
                android:background="#ef7000"
                android:layout_height="match_parent"
                android:text="Sữa Ghi Chú"
                android:textAlignment="center"
                android:textSize="20dp"/>
            <Button
            android:id="@+id/btnXoaGhiChu"
            android:layout_width="200dp"
                android:background="#F20"
            android:layout_height="match_parent"
            android:text="Xóa Ghi Chú"
            android:textAlignment="center"
            android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>