<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/favorite"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/itemSuaAnh"
                android:layout_width="250dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnSuaChupAnh"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="20dp"
                    android:text="CHỤP ẢNH"
                    android:background="#0028f1"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/btnSuaChonAnh"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="20dp"
                    android:text="CHỌN ẢNH"
                    android:background="#fd5203"
                    android:textAlignment="center"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Tên Ghi Chú"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"
                android:paddingTop="10dp"/>
            <EditText
                android:id="@+id/itemSuaTenGhiChu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:paddingTop="10dp"
            />

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Tên Khách Sạn"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingTop="10dp"/>
        <EditText
            android:id="@+id/itemSuaTenKhachSan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:paddingTop="10dp"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Địa Chỉ"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="10dp"/>
            <EditText
                android:id="@+id/itemSuaDiaChiKhachSan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:paddingTop="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:text="Mô Tả"
                android:textStyle="bold"
                android:textSize="25dp"
                android:paddingTop="10dp"/>
            <EditText
                android:id="@+id/itemSuaNhanXetKhachSan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:paddingTop="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
            android:id="@+id/btnSuaUpdateGhiChu"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Update"
            android:textSize="25dp"
            />
            <Button
                android:id="@+id/btnSuaThoatGhiChu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:background="#00a40b"
                android:text="THOÁT"
                android:textSize="25dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>