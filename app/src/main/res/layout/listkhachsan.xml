<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/imageKhachSan"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="25dp"
                android:id="@+id/txtDanhGia"
                android:text="danhgia"
                android:textColor="#ff0f2b"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTenKhachSan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="tenkhachsan"
                android:textColor="#ff9f0f"
                android:textSize="25dp" />
            <TextView
                android:gravity="right"
                android:id="@+id/txtDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="DiaChi"
                android:textColor="#050505"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/txtGiaTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="GiaTien"
                android:textColor="#0f37ff"
                android:textSize="25dp" />
            <RatingBar
                style="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbXepHang"
                android:isIndicator="true"

                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>