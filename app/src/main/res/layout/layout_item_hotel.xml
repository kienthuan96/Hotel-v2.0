<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/custom_layout_listview"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/imgKhachSan"
            android:src="@drawable/login_bg"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/classiquesaigon"
                android:id="@+id/txtTenKhachSan"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_weight="2"
                android:hint="Ten Khach San"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:fontFamily="@font/cuchobold"
                android:id="@+id/txtDiaChi"
                android:layout_weight="2"
                android:hint="Dia Chi"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/txtGiaTien"
                android:gravity="right"
                android:layout_weight="1"
                android:hint="Gia Tien"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
