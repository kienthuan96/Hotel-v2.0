<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@drawable/logo9"
        >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="ĐÁNH GIÁ"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/itemDiemKhachSan"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Điểm"
                android:textSize="40dp"
                android:paddingTop="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/itemTenKhachSan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Tên Khách sạn"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="BÌNH LUẬN"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/itemBinhLuan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:text="Đây là Bình luận"
                android:textAlignment="center"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Đăng bởi:"
                    android:textStyle="bold"
                   android:padding="8dp"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/itemTenBL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20dp"
                    android:text="Đây là tên "
                    android:textAlignment="center"
                    android:padding="3dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:text="Thời gian:"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/itemNgayDang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:text="Thời gian "
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>