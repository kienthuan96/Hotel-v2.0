<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:weightSum="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#FF5722"
                android:id="@+id/txtTKS"
                android:hint="Ten Khach san"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="#000"
                android:id="@+id/txtdiaC"
                android:hint="Dia chi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/txtHT"
                android:layout_weight="1"
                android:hint="Date 1"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="right"
                android:id="@+id/txtDT"
                android:layout_weight="1"
                android:hint="Date 2"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/txtND"
                android:layout_weight="1"
                android:hint="Date 1"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="right"
                android:id="@+id/txtNT"
                android:layout_weight="1"
                android:hint="Date 2"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="#000"
                android:id="@+id/txtSPD"
                android:hint="So phong"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="right"
                android:textColor="#000"
                android:id="@+id/txtTT"
                android:layout_weight="2"
                android:hint="Tien"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>