<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/favorite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemAnhKhachSan"
                android:layout_width="250dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnThemChupAnh"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#0028f1"
                    android:text="CHỤP ẢNH"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnThemChonAnh"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#fd5203"
                    android:text="CHỌN ẢNH"
                    android:textAlignment="center"
                    android:textSize="20dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Tên Ghi Chú"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/itemThemTenGhiChu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Tên Khách Sạn"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/itemThemTenKhachSan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Địa Chỉ"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/itemThemDiaChiKhachSan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:paddingTop="10dp"
                android:text="Mô Tả"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/itemThemNhanXetKhachSan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnThemGhiChu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="#eef200"
                android:text="THÊM"
                android:textAlignment="center"
                android:textSize="25dp" />

            <Button
                android:id="@+id/btnThemThoatThemGhiChu"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="#00a40b"
                android:text="THOÁT"
                android:textAlignment="center"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>